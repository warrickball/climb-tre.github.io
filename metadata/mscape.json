{
    "name": "mSCAPE",
    "description": "Metagenomics Surveillance, Collaboration and Analysis Programme.",
    "version": "0.1.0",
    "fields": {
        "biosample_id": {
            "description": "The sequencing provider's identifier for a sample.",
            "type": "text",
            "required": true,
            "actions": [
                "add"
            ],
            "restrictions": [
                "Max length: 50"
            ]
        },
        "biosample_source_id": {
            "description": "Unique identifier for an individual to permit multiple samples from the same individual to be linked.",
            "type": "text",
            "required": false,
            "actions": [
                "add"
            ],
            "restrictions": [
                "Max length: 50"
            ]
        },
        "run_index": {
            "description": "The sequencing provider's identifier for the position of a sample on a run.",
            "type": "text",
            "required": true,
            "actions": [
                "add"
            ],
            "restrictions": [
                "Max length: 50"
            ]
        },
        "run_id": {
            "description": "Unique identifier assigned to the run by the sequencing instrument.",
            "type": "text",
            "required": true,
            "actions": [
                "add"
            ],
            "restrictions": [
                "Max length: 100"
            ]
        },
        "input_type": {
            "description": "The type of input sequenced.",
            "type": "choice",
            "required": true,
            "actions": [
                "add"
            ],
            "values": [
                "positive_control",
                "negative_control",
                "community_standard",
                "specimen",
                "validation_material"
            ]
        },
        "input_type_details": {
            "description": "Named control or standard, or respiratory_infection if sample.",
            "type": "choice",
            "required": false,
            "actions": [
                "add"
            ]
        },
        "sample_source": {
            "description": "The source from which the sample was collected.",
            "type": "choice",
            "required": true,
            "actions": [
                "add"
            ],
            "values": [
                "nose_and_throat",
                "upper_respiratory",
                "lower_respiratory",
                "faecal",
                "tissue",
                "stool",
                "blood",
                "plasma",
                "urine",
                "environment",
                "other"
            ]
        },
        "sample_type": {
            "description": "The type of sampling method used.",
            "type": "choice",
            "required": true,
            "actions": [
                "add"
            ],
            "values": [
                "swab",
                "sputum",
                "bal",
                "aspirate",
                "biopsy",
                "other"
            ]
        },
        "collection_date": {
            "description": "The date the sample was collected.",
            "type": "date",
            "required": false,
            "actions": [
                "add"
            ],
            "restrictions": [
                "Input formats: YYYY-MM, YYYY-MM-DD",
                "Output format: YYYY-MM-DD",
                "At least one required: collection_date, received_date"
            ]
        },
        "received_date": {
            "description": "The date the sample was received by the sequencing centre (if collection_date unavailable).",
            "type": "date",
            "required": false,
            "actions": [
                "add"
            ],
            "restrictions": [
                "Input formats: YYYY-MM, YYYY-MM-DD",
                "Output format: YYYY-MM-DD",
                "At least one required: collection_date, received_date"
            ]
        },
        "is_approximate_date": {
            "description": "The date is approximate e.g. the sample is from a public repository and it is unclear whether the date corresponds to collection or publishing.",
            "type": "bool",
            "required": false,
            "actions": [
                "add"
            ],
            "default": false
        },
        "batch_id": {
            "description": "Used to identify samples prepared in the same laboratory batch (e.g. extraction, library and/or sequencing).",
            "type": "text",
            "required": false,
            "actions": [
                "add"
            ],
            "restrictions": [
                "Max length: 100"
            ]
        },
        "spike_in": {
            "description": "The type of spike-in used in the run.",
            "type": "choice",
            "required": false,
            "actions": [
                "add"
            ],
            "values": [
                "other"
            ]
        },
        "study_id": {
            "description": "Used to identify study or if NHS residual sample.",
            "type": "text",
            "required": false,
            "actions": [
                "add"
            ],
            "restrictions": [
                "Max length: 100"
            ]
        },
        "study_centre_id": {
            "description": "Used to identify sequencing centre.",
            "type": "text",
            "required": false,
            "actions": [
                "add"
            ],
            "restrictions": [
                "Max length: 100"
            ]
        },
        "sequence_purpose": {
            "description": "Used to differentiate between clinical or research studies.",
            "type": "choice",
            "required": false,
            "actions": [
                "add"
            ],
            "values": [
                "clinical",
                "research"
            ]
        },
        "governance_status": {
            "description": "Did the patient consent to their sample being used for research purposes or not.",
            "type": "choice",
            "required": false,
            "actions": [
                "add"
            ],
            "default": "no_consent_for_research",
            "values": [
                "consented_for_research",
                "no_consent_for_research",
                "open"
            ]
        },
        "iso_country": {
            "description": "Country that the sample was collected in, using ISO-3166-1 alpha-2 codes (https://en.wikipedia.org/wiki/List_of_ISO_3166_country_codes), unless within United Kingdom. If so, use ISO-3166-2:GB (https://en.wikipedia.org/wiki/ISO_3166-2:GB).",
